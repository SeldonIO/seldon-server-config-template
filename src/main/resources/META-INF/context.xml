<?xml version="1.0" encoding="UTF-8"?>
<Context path="/api">

<Resource name="jdbc/ApiDB" auth="Container" type="javax.sql.DataSource"
    factory="org.apache.commons.dbcp.BasicDataSourceFactory"
    maxActive="25" maxIdle="5" maxWait="20000" validationQuery="/* ping */ SELECT 1"
    testOnBorrow="true" testWhileIdle="true" timeBetweenEvictionRunsMillis="10000"
    minEvictableIdleTimeMillis="60000"
    removeAbandoned="true" removeAbandonedTimeout="60" logAbandoned="true"
    username="root" password="" driverClassName="com.mysql.jdbc.ReplicationDriver"
    url="jdbc:mysql:replication://localhost:3306,localhost:3306/api?characterEncoding=utf8&amp;useServerPrepStmts=true&amp;logger=com.mysql.jdbc.log.StandardLogger&amp;roundRobinLoadBalance=true&amp;transformedBitIsBoolean=true&amp;rewriteBatchedStatements=true"/>

<Resource name="jdbc/TestClientDB" auth="Container" type="javax.sql.DataSource"
    factory="org.apache.commons.dbcp.BasicDataSourceFactory"
    maxActive="25" maxIdle="5" maxWait="20000" validationQuery="/* ping */ SELECT 1"
    testOnBorrow="true" testWhileIdle="true" timeBetweenEvictionRunsMillis="10000"
    minEvictableIdleTimeMillis="60000"
    removeAbandoned="true" removeAbandonedTimeout="60" logAbandoned="true"
    username="root" password="" driverClassName="com.mysql.jdbc.ReplicationDriver"
    url="jdbc:mysql:replication://localhost:3306,localhost:3306/testclient?characterEncoding=utf8&amp;useServerPrepStmts=true&amp;logger=com.mysql.jdbc.log.StandardLogger&amp;roundRobinLoadBalance=true&amp;transformedBitIsBoolean=true&amp;rewriteBatchedStatements=true"/>

</Context>
